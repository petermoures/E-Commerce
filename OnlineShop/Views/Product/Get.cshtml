@inject UserManager<User> userManager
@model List<product>
@{
	string userId = userManager.GetUserId(User);
 }
<div class="row row-cols-1 row-cols-md-3 g-4">

	@foreach (product pro in Model)
	  {
		
		<div class="col">
			<div class="card">
				<div class="card-header fw-bold">
					@pro.ProName
				</div>
				<img src="~/photo/@pro.Image" class="card-img " style="height:22rem;">
				<div class="card-body d-flex justify-content-around">

					<a asp-controller="Product" asp-action="AddToCart" asp-route-Id="@pro.Id" asp-route-userId="@userId" class="btn  btn-primary me-1">Add to Cart</a>
					<a asp-controller="Product" asp-action="Details" asp-route-Id="@pro.Id" class="btn  btn-primary">Details</a>
					
				</div>
			</div>
		</div>
				
	  }
 </div>
	